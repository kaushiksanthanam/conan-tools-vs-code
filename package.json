{
    "name": "conan-tools",
    "displayName": "conan-tools",
    "description": "VS Code extension for conan tools",
    "version": "1.0.0",
    "publisher": "Keysight",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:conanfile.py"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "conan.configure",
                    "name": "conan"
                }
            ]
        },
        "commands": [
            {
                "command": "conan.install",
                "title": "Install",
                "icon": {
                    "light": "resources/light/install.png",
                    "dark": "resources/dark/install.png"
                }
            },
            {
                "command": "conan.build",
                "title": "Build",
                "icon": {
                    "light": "resources/light/build.png",
                    "dark": "resources/dark/build.png"
                }
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "conan.install"
                },
                {
                    "command": "conan.build"
                }
            ],
            "view/title": [
                {
                    "command": "conan.install",
                    "when": "view == conan.configure",
                    "group": "navigation"
                },
                {
                    "command": "conan.build",
                    "when": "view == conan.configure",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "Conan Configuration",
            "properties": {
                "conan.installCommand": {
                    "type": [
                        "string"
                    ],
                    "default": "conan install ..",
                    "description": "Custom conan install command for the workspace"
                },
                "conan.buildCommand": {
                    "type": [
                        "string"
                    ],
                    "default": "conan build ..",
                    "description": "Custom conan build command for the workspace"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
